{
  "publisher": "octohash",
  "name": "crosside-recently-codes",
  "displayName": "Crosside Recently Codes",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "description": "A VSCode extension for listing recent projects from VSCode and its forks like Cursor and Windsurf.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/recently-codes#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/recently-codes.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/recently-codes/issues"
  },
  "keywords": [
    "vscode",
    "history",
    "projects",
    "recently-codes"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "octohash.crosside-recently-codes.installDependencies",
        "title": "Install Dependencies",
        "category": "Recently Codes"
      },
      {
        "command": "octohash.crosside-recently-codes.listRecentlyCodes",
        "title": "List Recently Codes",
        "category": "Recently Codes"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "crosside-recently-codes",
      "properties": {
        "crosside-recently-codes.editors": {
          "type": "array",
          "description": "The list of codes to list recent projects.",
          "default": [
            "vscode",
            "cursor",
            "windsurf"
          ],
          "items": {
            "type": "string",
            "enum": [
              "vscode",
              "vscode-insiders",
              "vscodium",
              "vscodium-insiders",
              "cursor",
              "windsurf"
            ]
          }
        },
        "crosside-recently-codes.openInNewWindow": {
          "type": "boolean",
          "description": "Whether to open the recently codes in a new window.",
          "default": true
        },
        "crosside-recently-codes.showGitBranch": {
          "type": "boolean",
          "description": "Whether to show git branch in the recently codes.",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "pnpm build --watch --sourcemap",
    "generate": "vscode-ext-gen --output src/generated/meta.ts",
    "package": "pnpm before-package && vsce package --no-dependencies && pnpm after-package",
    "before-package": "tsx ./scripts/before-package.ts",
    "after-package": "tsx ./scripts/after-package.ts",
    "release": "vsxpub --no-dependencies",
    "prepare": "pnpm generate",
    "vscode:prepublish": "pnpm build"
  },
  "peerDependencies": {
    "better-sqlite3": "^12.2.0"
  },
  "dependencies": {
    "recently-codes-cli": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.0",
    "ovsx": "^0.10.5",
    "reactive-vscode": "^0.3.1",
    "typescript": "^5.9.2",
    "vscode-ext-gen": "^1.1.0",
    "vsxpub": "^0.1.1"
  }
}
